<?xml version="1.0" encoding="UTF-8"?>
<externaltool id="Run_Cpp_external_terminal_">
    <description>Compile and run simple files in Cpp.</description>
    <displayname>Build and Run C++</displayname>
    <category>Cpp</category>
    <executable output="showinpane" error="showinpane" modifiesdocument="yes">
        <path>bash</path>
        <arguments>-c 'g++ -std=c++2b -o %{CurrentDocument:FileBaseName} %{CurrentDocument:FilePath} &amp;&amp; ./%{CurrentDocument:FileBaseName}'</arguments>
        <workingdirectory>%{CurrentDocument:Path}</workingdirectory>
    </executable>
</externaltool>

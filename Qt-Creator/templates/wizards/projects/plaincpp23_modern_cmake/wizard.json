{
    "version": 1,
    "supportedProjectTypes": "CMakeProjectManager.CMakeProject",
    "id": "PMCA2.Plain Modern Cpp Application",
    "category": "I.Projects",
    "trDescription": "Create a simple modern C++ application using Cmake.",
    "trDisplayName": "Plain Modern C++ Application 2",
    "trDisplayCategory": "Non-Qt Project",
    "icon": "consoleapplication.png",
    "iconKind": "Themed",
    "enabled": "%{JS: value('Plugins').indexOf('CppEditor') >= 0 && value('Plugins').indexOf('CMakeProjectManager') >= 0}",

    "options":
    [
        { "key": "ProjectFile", "value": "%{JS: '%{CMakeFile}'}" },
        { "key": "CMakeFile", "value": "%{ProjectDirectory}/CMakeLists.txt" },
        { "key": "CppFileName", "value": "%{JS: 'main.' + Util.preferredSuffix('text/x-c++src')}" }
    ],

    "pages":
    [
        {
            "trDisplayName": "Project Location",
            "trShortTitle": "Location",
            "typeId": "Project"
        },
        {
            "trDisplayName": "Kit Selection",
            "trShortTitle": "Kits",
            "typeId": "Kits",
            "enabled": "%{JS: ! %{IsSubproject}}",
            "data": { "projectFilePath": "%{ProjectFile}" }
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Details",
            "typeId": "Fields",
            "data":
            [         
                {
                    "name": "IncludeExample",
                    "trDisplayName": "Do you want to create an 'Example' file and 'include' and 'src' directories?",
                    "type": "CheckBox",
                    "data":
                    {
                        "checkedValue": true,
                        "uncheckedValue": "false",
                        "checked": "false"
                    }
                },
                {
                    "name": "IncludeGitignore",
                    "trDisplayName": "Do you want to insert the .gitignore file?",
                    "type": "CheckBox",
                    "data":
                    {
                        "checkedValue": true,
                        "uncheckedValue": "false",
                        "checked": "false"
                    }
                },
                {
                    "name": "Sp1",
                    "type": "Spacer",
                    "data":
                    {
                        "factor": 2
                    }
                },
                {
                    "name": "LabelPM1",
                    "type": "Label",
                    "span": true,
                    "visible": true,
                    "data":
                    {
                        "wordWrap": true,
                        "trText": "Files to be added in"
                    }
                },
                {
                    "name": "LabelPM3",
                    "type": "Label",
                    "span": true,
                    "visible": "%{JS: value('IncludeExample') === 'true'}",
                    "data":
                    {
                        "wordWrap": true,
                        "trText": "include/example.hpp"
                    }
                },
                {
                    "name": "LabelPM4",
                    "type": "Label",
                    "span": true,
                    "visible": "%{JS: value('IncludeExample') === 'true'}",
                    "data":
                    {
                        "wordWrap": true,
                        "trText": "src/example.cpp"
                    }
                },
                {
                    "name": "LabelPM5",
                    "type": "Label",
                    "span": true,
                    "visible": true,
                    "data":
                    {
                        "wordWrap": true,
                        "trText": "src/main.cpp"
                    }
                },
                {
                    "name": "LabelPM6",
                    "type": "Label",
                    "span": true,
                    "visible": true,
                    "data":
                    {
                        "wordWrap": true,
                        "trText": "CMakeLists"
                    }
                },
                {
                    "name": "LabelPM7",
                    "type": "Label",
                    "span": true,
                    "visible": "%{JS: value('IncludeGitignore') === 'true'}",
                    "data":
                    {
                        "wordWrap": true,
                        "trText": ".gitignore"
                    }
                }              
            ]
        }  
    ],

    "generators":
    [
        {
            "typeId": "File",
            "data":
            [
                {
                    "source": "CMakeLists.txt",
                    "target": "CMakeLists.txt",
                    "openAsProject": true,
                    "condition": "%{JS: value('IncludeExample') === 'false'}"                    
                },
                {
                    "source": "CMakeLists_example.txt",
                    "target": "CMakeLists.txt",
                    "openAsProject": true,
                    "condition": "%{JS: value('IncludeExample') === 'true'}"                    
                },                
                {
                    "source": "main.cpp",
                    "target": "src/%{CppFileName}",
                    "openInEditor": true,
                    "condition": "%{JS: value('IncludeExample') === 'false'}"

                },
                {
                    "source": "main_example.cpp",
                    "target": "src/%{CppFileName}",
                    "openInEditor": true,
                    "condition": "%{JS: value('IncludeExample') === 'true'}"
                },

                {
                    "source": "example.cpp",
                    "target": "src/example.cpp",
                    "openInEditor": false,
                    "condition": "%{JS: value('IncludeExample') === 'true'}"
                },
                {
                    "source": "example.hpp",
                    "target": "include/example.hpp",
                    "openInEditor": false,
                    "condition": "%{JS: value('IncludeExample') === 'true'}"
                },
                {
                    "source": ".gitignore",
                    "target": ".gitignore",
                    "condition": "%{JS: value('IncludeGitignore') === 'true'}"
                }
            ]
        }
    ]
}
